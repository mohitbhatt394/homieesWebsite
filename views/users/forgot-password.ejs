<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/style/main.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <% if (error_msg) { %>
    <div class="flash-message alert-danger"><%= error_msg %></div>
  <% } %>
  <% if (success_msg) { %>
    <div class="flash-message alert-success"><%= success_msg %></div>
  <% } %>

  <main class="auth-page">
    <div class="container">
      <div class="auth-card">
        <h2>Reset Your Password</h2>
        <form action="/user/forgot-password" method="POST" class="auth-form">
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" required class="form-input">
          </div>
          <button type="submit" class="btn primary-btn">Send Reset Link</button>
        </form>
      </div>
    </div>
  </main>
</body>
</html>
